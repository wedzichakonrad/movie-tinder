{
  "plugins": [
    "react",
    "react-hooks"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parser": "babel-eslint",
  "globals": {
    "$": true,
    "HM": true,
    "Backbone": true,
    "Mustache": true,
    "_": true,
    "BaseView": true,
    "filepicker": true,
    "LazyLoad": true,
    "Themes": true,
    "hmAnalytics": true,
    "Pusher": true,
    "FB": true
  },
  "rules": {
    "array-bracket-newline": "off",
    "react/prop-types": 0,
    "react/no-deprecated": 0,
    "react/no-unescaped-entities": "off",
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true }
    ],
    "semi": "error",
    "no-undef": [
      "error"
    ],
    "react-hooks/rules-of-hooks": "warn", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  }
}
